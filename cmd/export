package cmd

import (
	"fmt"

	"github.com/abdealt/meliodas/components"
	"github.com/spf13/cobra"
)

var rootCmd = &cobra.Command{
	Use:   "export",
	Short: "Cette commande sert à exporter les données, depuis un fichier source vers un autre endroit.",
	Long:  "Dans le fichier de configuration .env de Meliodas, on définit ce qu'on souhaite exporter, de quel fichier source et vers quel endroit.",
	Args : cobra.MinimumArgs(2)
	Run: func(cmd *cobra.Command, args []string) {
		fmt.Println("Debut de l'opération")
		// Do Stuff Here
		components.ReadCSVFileContentAndExtracter()
	},
}
